{{> header }}

<h2>{{ title }}</h2>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Text</th>
      <th scope="col">User</th>
    </tr>
  </thead>
  <tbody>
    {{# each tweets}}
        <tr>
            <td> {{ created_at }} </td>
            <td> {{ text }} </td>
            <td> {{ username }} </td>
        </tr>
    {{/each}}
  </tbody>
</table>